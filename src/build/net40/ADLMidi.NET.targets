<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_ADLMidi_NET_IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</_ADLMidi_NET_IsWindows>
    <_ADLMidi_NET_IsLinux Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">true</_ADLMidi_NET_IsLinux>

    <_ADLMidi_NET_NativeRuntime Condition=" '$(_ADLMidi_NET_NativeRuntime)' == '' And '$(_ADLMidi_NET_IsWindows)' == 'true' And ('$(Prefer32Bit)' == 'true' Or '$(PlatformTarget)' == 'x86')">win-x86</_ADLMidi_NET_NativeRuntime>
    <_ADLMidi_NET_NativeRuntime Condition=" '$(_ADLMidi_NET_NativeRuntime)' == '' And '$(_ADLMidi_NET_IsWindows)' == 'true' And ('$(Prefer32Bit)' == 'false' Or '$(PlatformTarget)' == 'x64')">win-x64</_ADLMidi_NET_NativeRuntime>
    <_ADLMidi_NET_NativeRuntime Condition=" '$(_ADLMidi_NET_NativeRuntime)' == '' And '$(_ADLMidi_NET_IsLinux)' == 'true' And ('$(Prefer32Bit)' == 'false' Or '$(PlatformTarget)' == 'x64')">linux-x64</_ADLMidi_NET_NativeRuntime>

    <_ADLMidi_NET_NativeLibName Condition="'$(_ADLMidi_NET_NativeRuntime)' == 'win-x86' Or '$(_ADLMidi_NET_NativeRuntime)' == 'win-x64'">ADLMIDI.dll</_ADLMidi_NET_NativeLibName>
    <_ADLMidi_NET_NativeLibName Condition="'$(_ADLMidi_NET_NativeRuntime)' == 'linux-x64'">libADLMIDI.so</_ADLMidi_NET_NativeLibName>
  </PropertyGroup>
  <ItemGroup>
    <Content Condition="'$(_ADLMidi_NET_NativeRuntime)' != ''" Include="$(MSBuildThisFileDirectory)..\..\runtimes\$(_ADLMidi_NET_NativeRuntime)\native\$(_ADLMidi_NET_NativeLibName)">
      <Link>%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Visible>False</Visible>
    </Content>
  </ItemGroup>
</Project>
